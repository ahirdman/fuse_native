{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingComma": "all",
      "quoteProperties": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "style": {
        "useBlockStatements": "off"
      },
      "suspicious": {
        "noConsoleLog": "off"
      }
    }
  },
  "files": {
    "ignore": [
      ".expo",
      "scripts/",
      "supabase/",
      "dist",
      "build",
      "node_modules",
      "coverage",
      "test-results",
      "metro.config.js",
      "babel.config.js",
      "index.js",
      "ios",
      "android"
    ]
  },
  "overrides": [
    {
      "include": ["navigation.types.ts", "tamagui.config.ts", "env.types.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noEmptyInterface": "off"
          }
        }
      }
    }
  ]
}
