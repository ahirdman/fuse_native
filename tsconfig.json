{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "module": "esnext",
    "baseUrl": "src",
    "paths": {
      "common/*": ["features/common/*"],
      "fuse/*": ["features/fuse/*"],
      "navigation/*": ["features/navigation/*"],
      "social/*": ["features/social/*"],
      "subscription/*": ["features/subscription/*"],
      "tag/*": ["features/tag/*"],
      "track/*": ["features/track/*"],
      "user/*": ["features/user/*"],
      "auth/*": ["features/auth/*"],
      "config": ["config/index.ts"],
      "test-utils": ["../__test__/test-utils.tsx"]
    },
    "types": ["bun-types"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
